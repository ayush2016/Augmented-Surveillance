<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/gps_coordinates"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opencv"
        android:layout_marginRight="10dp"
        android:background="@drawable/gps"
        android:onClick="newIdentificationActivityOnClick"
        android:text="@string/identification"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/map"
        android:background="@drawable/track_on_map"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:onClick="newMapActivityOnClick"
        android:text="@string/map"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/gps_coordinates"
        android:layout_toEndOf="@+id/gps_coordinates" />

    <Button
        android:background="@drawable/core"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:onClick="newDataActivityOnClick"
        android:text="@string/master_data"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/opencv"
        android:layout_alignLeft="@+id/map"
        android:layout_alignStart="@+id/map"
        />

    <Button
        android:id="@+id/opencv"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_above="@+id/map"
        android:layout_alignLeft="@+id/gps_coordinates"
        android:layout_alignStart="@+id/gps_coordinates"
        android:layout_marginBottom="10dp"
        android:background="@drawable/identify"
        android:onClick="newOpenCVActivityOnClick"
        android:text="@string/opencv"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

</RelativeLayout>