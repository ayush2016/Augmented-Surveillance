<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latitude"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/latitude_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/longitude_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <Button
        android:id="@+id/map"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newMapActivityOnClick"
        android:text="@string/map" />


    <Button
        android:id="@+id/activityrecognition"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newActivityOnClick"
        android:text="@string/activity_recognition" />

    <Button
        android:id="@+id/masterdata"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newDataActivityOnClick"
        android:text="@string/master_data" />

    <Button
        android:id="@+id/accelerometer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newAccelerometerActivityOnClick"
        android:text="@string/accelerometer" />

    <Button
        android:id="@+id/gyroscope"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newGyroscopeActivityOnClick"
        android:text="@string/gyroscope" />

    <Button
        android:id="@+id/magnetometer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="newMagnetometerActivityOnClick"
        android:text="@string/magnetometer" />

</LinearLayout>