<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/gps_coordinates"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:onClick="newGPSCoordinatesActivityOnClick"
        android:text="@string/gps_coordinates" />

    <Button
        android:id="@+id/map"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:onClick="newMapActivityOnClick"
        android:text="@string/map" />

    <Button
        android:id="@+id/master_data"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:onClick="newDataActivityOnClick"
        android:text="@string/master_data" />

    <Button
        android:id="@+id/opencv"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:onClick="newOpenCVActivityOnClick"
        android:text="@string/opencv" />

</LinearLayout>